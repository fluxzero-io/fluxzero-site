---
// Project Generator Component for Fluxzero Documentation

export interface Template {
  name: string;
  description: string;
  language: 'java' | 'kotlin';
}

export interface ProjectGeneratorData {
  projectName: string;
  artifactId: string;
  groupId: string;
  selectedTemplate: string;
  buildTool: 'gradle' | 'maven';
  artifactIdManuallyEdited: boolean;
  buttonState: 'idle' | 'loading' | 'success';
  message: string | null;
  messageType: 'error' | 'success';
  errors: ValidationErrors;
  templates: Record<string, Template>;
}

export interface ValidationErrors {
  projectName?: string | null;
  groupId?: string | null;
  artifactId?: string | null;
}

export interface ApiPayload {
  template: string;
  name: string;
  packageName: string;
  groupId: string;
  artifactId: string;
  buildSystem: string;
  description: string;
}

const templates: Record<string, Template> = {
  'flux-java-single': {
    name: 'Basic Java Starter',
    description: 'A minimal Fluxzero setup for getting started.',
    language: 'java'
  },
  'flux-kotlin-single': {
    name: 'Basic Kotlin Starter',
    description: 'A minimal Fluxzero setup for getting started.',
    language: 'kotlin'
  },
  'gamerental': {
    name: 'Gamerental Example',
    description: 'Complete application for game rentals.',
    language: 'java'
  },
};
---

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg overflow-hidden my-8" client:load x-data="projectGenerator()">
  <!-- Header -->
  <div class="bg-green-50 dark:bg-green-900/20 border-b border-green-200 dark:border-green-800 px-6 py-4">
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Fluxzero Project Generator</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Bootstrap your new Fluxzero project</p>
      </div>
    </div>
  </div>

  <form @submit.prevent="generateProject()" class="p-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Left Column: Project Configuration -->
      <div class="space-y-6">
        <div>
          <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Project Metadata
          </h4>
          
          <!-- Project Name -->
          <div class="space-y-2">
            <label for="project-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Project Name
            </label>
            <input 
              type="text" 
              x-model="projectName"
              @input="updateArtifactId()"
              placeholder="my-awesome-project"
              required
              maxlength="50"
              :class="errors.projectName ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 dark:border-gray-600 focus:ring-primary-500 focus:border-primary-500'"
              class="w-full px-3 py-2.5 rounded-lg shadow-sm text-sm focus:outline-none focus:ring-2 dark:bg-gray-800 dark:text-white transition-colors"
            />
            <div x-show="errors.projectName" x-cloak class="text-red-600 dark:text-red-400 text-xs mt-1" x-text="errors.projectName"></div>
          </div>

          <!-- Group -->
          <div class="space-y-2 field-spacing">
            <label for="group-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Group
            </label>
            <input 
              type="text" 
              x-model="groupId"
              placeholder="com.example"
              :class="errors.groupId ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 dark:border-gray-600 focus:ring-primary-500 focus:border-primary-500'"
              class="w-full px-3 py-2.5 rounded-lg shadow-sm text-sm focus:outline-none focus:ring-2 dark:bg-gray-800 dark:text-white transition-colors"
            />
            <div x-show="errors.groupId" x-cloak class="text-red-600 dark:text-red-400 text-xs mt-1" x-text="errors.groupId"></div>
          </div>

          <!-- Artifact ID -->
          <div class="space-y-2 field-spacing">
            <label for="artifact-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Artifact ID
            </label>
            <input 
              type="text" 
              x-model="artifactId"
              @input="artifactIdManuallyEdited = true"
              placeholder="my-project"
              :class="errors.artifactId ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 dark:border-gray-600 focus:ring-primary-500 focus:border-primary-500'"
              class="w-full px-3 py-2.5 rounded-lg shadow-sm text-sm focus:outline-none focus:ring-2 dark:bg-gray-800 dark:text-white transition-colors"
            />
            <div x-show="errors.artifactId" x-cloak class="text-red-600 dark:text-red-400 text-xs mt-1" x-text="errors.artifactId"></div>
          </div>

          <!-- Build Tool -->
          <div class="field-spacing">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Build Tool</label>
            <div class="flex items-center gap-6">
              <label class="flex items-center gap-2 mt-0">
                <input type="radio" x-model="buildTool" value="gradle" class="text-primary-600 focus:ring-primary-500">
                <span class="text-sm text-gray-700 dark:text-gray-300">Gradle</span>
              </label>
              <label class="flex items-center gap-2 mt-0">
                <input type="radio" x-model="buildTool" value="maven" class="text-primary-600 focus:ring-primary-500">
                <span class="text-sm text-gray-700 dark:text-gray-300">Maven</span>
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Template Selection -->
      <div class="space-y-6">
        <div>
          <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Project Template
          </h4>

          <!-- Template Cards -->
          <div class="space-y-3">
            <template x-for="[templateId, template] in Object.entries(templates)" :key="templateId">
              <label class="template-card block cursor-pointer" @click="selectedTemplate = templateId">
                <input 
                  type="radio" 
                  x-model="selectedTemplate"
                  :value="templateId"
                  class="hidden" 
                />
                <div :class="selectedTemplate === templateId ? 'border-primary-500 bg-primary-50 dark:bg-primary-900/20' : 'border-gray-200 dark:border-gray-700'" class="template-card-inner border-2 rounded-lg px-4 py-3 hover:border-primary-300 dark:hover:border-primary-600 transition-all">
                  <div class="flex items-baseline gap-3">
                    <div :class="selectedTemplate === templateId ? 'border-primary-500 bg-primary-500' : 'border-gray-400'" class="w-3 h-3 rounded-full border-2 mt-0.5"></div>
                    <div class="flex-1 mt-0">
                      <div class="flex items-center justify-between mb-1">
                        <h5 class="font-medium text-gray-900 dark:text-white" x-text="template.name"></h5>
                        <span :class="template.language === 'java' ? 'bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300' : 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300'" class="inline-flex items-center gap-1.5 px-2 py-1 rounded text-xs font-medium">
                          <svg x-show="template.language === 'java'" class="w-3 h-3 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M8.851 18.56s-.917.534.653.714c1.902.218 2.874.187 4.969-.211 0 0 .552.346 1.321.646-4.699 2.013-10.633-.118-6.943-1.149M8.276 15.933s-1.028.761.542.924c2.032.209 3.636.227 6.413-.308 0 0 .384.389.987.602-5.679 1.661-12.007.13-7.942-1.218M13.116 11.475c1.158 1.333-.304 2.533-.304 2.533s2.939-1.518 1.589-3.418c-1.261-1.772-2.228-2.652 3.007-5.688 0-.001-8.216 2.051-4.292 6.573M19.33 20.504s.679.559-.747.991c-2.712.822-11.288 1.069-13.669.033-.856-.373.75-.89 1.254-.998.527-.114.828-.093.828-.093-.953-.671-6.156 1.317-2.643 1.887 9.58 1.553 17.462-.7 14.977-1.82M9.292 13.21s-4.362 1.036-1.544 1.412c1.189.159 3.561.123 5.77-.062 1.806-.152 3.618-.477 3.618-.477s-.637.272-1.098.587c-4.429 1.165-12.986.623-10.522-.568 2.082-1.006 3.776-.892 3.776-.892M17.116 17.584c4.503-2.34 2.421-4.589.968-4.285-.355.074-.515.138-.515.138s.132-.207.385-.297c2.875-1.011 5.086 2.981-.928 4.562 0-.001.07-.062.09-.118M14.401 0s2.494 2.494-2.365 6.33c-3.896 3.077-.888 4.832-.001 6.836-2.274-2.053-3.943-3.858-2.824-5.539 1.644-2.469 6.197-3.665 5.19-7.627M9.734 23.924c4.322.277 10.959-.153 11.116-2.198 0 0-.302.775-3.572 1.391-3.688.694-8.239.613-10.937.168 0-.001.553.457 3.393.639"/>
                          </svg>
                          <svg x-show="template.language === 'kotlin'" class="w-3 h-3 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M0 24l12-12L0 0v24zM12 12L24 0v24L12 12z"/>
                          </svg>
                          <span x-text="template.language === 'java' ? 'Java' : 'Kotlin'"></span>
                        </span>
                      </div>
                      <p class="text-sm text-gray-600 dark:text-gray-400" x-text="template.description"></p>
                    </div>
                  </div>
                </div>
              </label>
            </template>
          </div>
        </div>
      </div>
    </div>

    <!-- Generate Button -->
    <div class="flex items-center justify-between mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div x-show="message" x-cloak class="inline-flex items-center gap-2 text-sm" :class="messageType === 'error' ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400'">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" :d="messageType === 'error' ? 'M6 18L18 6M6 6l12 12' : 'M5 13l4 4L19 7'"></path>
        </svg>
        <span x-text="message"></span>
      </div>
      
      <button 
        type="submit" 
        :disabled="buttonState === 'loading' || hasValidationErrors"
        class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium px-6 py-3 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 disabled:opacity-50 disabled:cursor-not-allowed shadow-sm"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" :class="buttonState === 'loading' ? 'animate-spin' : ''">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x-show="buttonState === 'idle'" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          <circle x-show="buttonState === 'loading'" class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path x-show="buttonState === 'loading'" class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          <path x-show="buttonState === 'success'" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span x-text="buttonText"></span>
      </button>
    </div>
  </form>
</div>



<script define:vars={{ templates }}>
  // Pass templates to Alpine
  window.FLUXZERO_TEMPLATES = templates;
  console.log(templates);
</script>

<script>
  import Alpine from 'alpinejs';
  
  document.addEventListener('DOMContentLoaded', () => {
    Alpine.data('projectGenerator', () => ({
      // State
      projectName: 'demo',
      artifactId: 'demo',
      groupId: 'com.example',
      selectedTemplate: 'flux-java-single',
      buildTool: 'gradle',
      artifactIdManuallyEdited: false,
      buttonState: 'idle',
      message: null,
      messageType: 'error',
      
      // Validation state
      errors: {},
      
      // Templates from Astro frontmatter
      templates: window.FLUXZERO_TEMPLATES || {},
      
      // Computed properties
      get buttonText() {
        switch (this.buttonState) {
          case 'loading': return 'Generating...';
          case 'success': return 'Downloaded!';
          default: return 'Generate';
        }
      },
      
      get hasValidationErrors() {
        return Object.values(this.errors).some(error => error !== null && error !== undefined);
      },
      
      // Methods
      init() {
        // Initialize validation
        this.validateAll();
        
        // Auto-hide messages after 5 seconds
        this.$watch('message', (message) => {
          if (message) {
            setTimeout(() => {
              this.message = null;
            }, 5000);
          }
        });
        
        // Auto-reset success button state
        this.$watch('buttonState', (state) => {
          if (state === 'success') {
            setTimeout(() => {
              this.buttonState = 'idle';
            }, 2000);
          }
        });
        
        // Watch for validation changes
        this.$watch('projectName', () => this.validateProjectName());
        this.$watch('groupId', () => this.validateGroupId());
        this.$watch('artifactId', () => this.validateArtifactId());
      },
      
      validateProjectName() {
        if (!this.projectName) {
          this.errors.projectName = null;
          return;
        }
        if (this.projectName.length > 50) {
          this.errors.projectName = 'Project name must be 50 characters or less';
          return;
        }
        if (!/^[a-zA-Z0-9_\- ]+$/.test(this.projectName)) {
          this.errors.projectName = 'Project name can only contain letters, numbers, spaces, hyphens, and underscores';
          return;
        }
        this.errors.projectName = null;
      },
      
      validateGroupId() {
        if (!this.groupId) {
          this.errors.groupId = null;
          return;
        }
        if (!/^[a-z0-9-]+(\.[a-z0-9-]+)+$/.test(this.groupId)) {
          this.errors.groupId = 'Group ID must follow Maven standards (e.g., com.example or org.mycompany)';
          return;
        }
        const segments = this.groupId.split('.');
        for (const segment of segments) {
          if (segment.startsWith('-') || segment.endsWith('-') || segment === '') {
            this.errors.groupId = 'Group ID segments cannot start/end with hyphens or be empty';
            return;
          }
        }
        this.errors.groupId = null;
      },
      
      validateArtifactId() {
        if (!this.artifactId) {
          this.errors.artifactId = null;
          return;
        }
        if (!/^[a-z0-9-]+$/.test(this.artifactId)) {
          this.errors.artifactId = 'Artifact ID can only contain lowercase letters, numbers, and hyphens';
          return;
        }
        if (this.artifactId.startsWith('-') || this.artifactId.endsWith('-')) {
          this.errors.artifactId = 'Artifact ID cannot start or end with hyphens';
          return;
        }
        this.errors.artifactId = null;
      },
      
      validateAll() {
        this.validateProjectName();
        this.validateGroupId();
        this.validateArtifactId();
      },
      
      convertToArtifactId(projectName) {
        return projectName
          .toLowerCase()
          .replace(/[^a-z0-9\s\-_]/g, '')
          .replace(/[\s_]+/g, '-')
          .replace(/-+/g, '-')
          .replace(/^-+|-+$/g, '');
      },
      
      updateArtifactId() {
        if (!this.artifactIdManuallyEdited) {
          this.artifactId = this.convertToArtifactId(this.projectName);
        }
      },
      
      showMessage(text, type = 'error') {
        this.message = text;
        this.messageType = type;
      },
      
      async generateProject() {
        // Validation
        if (!this.projectName || !this.artifactId || !this.selectedTemplate) {
          this.showMessage('Please fill in all required fields', 'error');
          return;
        }
        
        // Check for any validation errors
        this.validateAll();
        if (this.hasValidationErrors) {
          const firstError = Object.values(this.errors).find(error => error !== null && error !== undefined);
          if (firstError) {
            this.showMessage(firstError, 'error');
          }
          return;
        }
        
        this.buttonState = 'loading';
        this.message = null;
        
        try {
          const template = this.templates[this.selectedTemplate];
          const apiPayload = {
            template: this.selectedTemplate,
            name: this.projectName,
            packageName: this.groupId + '.' + this.artifactId.toLowerCase().replace(/[^a-z0-9]/g, ''),
            groupId: this.groupId,
            artifactId: this.artifactId,
            buildSystem: this.buildTool,
            description: template?.description || 'A Fluxzero project'
          };
          
          const response = await fetch('https://fluxzero-cli-api-production.rene7346.workers.dev/api/init', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(apiPayload)
          });
          
          if (!response.ok) {
            throw new Error(`API request failed: ${response.status} ${response.statusText}`);
          }
          
          const blob = await response.blob();
          const downloadUrl = URL.createObjectURL(blob);
          const link = document.createElement('a');
          link.href = downloadUrl;
          link.download = `${this.projectName}.zip`;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
          URL.revokeObjectURL(downloadUrl);
          
          this.buttonState = 'success';
          this.showMessage('Project downloaded successfully!', 'success');
        } catch (error) {
          this.buttonState = 'idle';
          this.showMessage('Failed to generate project. Please try again some time later.', 'error');
          console.error('Project generation error:', error);
        }
      }
    }));
    
    Alpine.start();
  });
</script>

