---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/main.scss';
---

<BaseLayout 
  title="Fluxzero | Pricing" 
  description="Transparent pricing for Fluxzero - Choose the plan that fits your team size and requirements. Start with our free tier or scale up to enterprise."
>
  <!-- Bootstrap icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" slot="head">
  <link rel="stylesheet" href="/fluxzero/fluxzero.css" slot="head">

  <!-- Page wrapper for sticky footer -->
  <main class="page-wrapper">
    <Header />

    <!-- Hero Section -->
    <section class="bg-dark position-relative overflow-hidden py-5" data-bs-theme="dark">
      <div class="bg-overlay bg-dark opacity-50"></div>
      <div class="container position-relative zindex-2 pt-5 pb-4">
        <!-- Breadcrumb -->
        <nav class="pt-md-2 pt-lg-3 pb-4 pb-md-5 mb-xl-4" aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Pricing</li>
          </ol>
        </nav>
        
        <div class="text-center pb-3 pb-lg-4">
          <h1 class="display-4 mb-0">Transparent Pricing for You</h1>
        </div>
        
        <!-- Spacer -->
        <div style="height: 300px;"></div>
      </div>
    </section>

    <!-- Pricing Plans Section -->
    <section class="container pb-5 mb-2 mb-md-4 mb-lg-5" style="margin-top: -200px;">
      <div class="position-relative zindex-2">
        
        <!-- Price toggle -->
        <div class="d-flex justify-content-center pb-4 pb-sm-5">
          <div class="form-check form-switch">
            <input type="checkbox" class="form-check-input" id="price-switch">
            <label for="price-switch" class="form-check-label fs-sm">
              <span class="opacity-70">Pay monthly</span>
              <span class="opacity-70 ms-2">Pay annually</span>
              <span class="badge bg-danger ms-2">-20%</span>
            </label>
          </div>
        </div>

        <!-- Pricing cards -->
        <div class="row">
          <!-- Team Plan -->
          <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card h-100">
              <div class="card-body text-center p-4 p-xxl-5">
                <h3 class="h5 pb-1 mb-2">Team</h3>
                <p class="text-muted mb-4">Best for small teams</p>
                <div class="d-flex justify-content-center align-items-end pb-4 mb-3">
                  <div class="h2 mb-0" data-monthly-price="15" data-annual-price="12">
                    $<span class="price">15</span>
                  </div>
                  <div class="fs-sm text-muted mb-1">/month</div>
                </div>
                <ul class="list-unstyled fs-sm pb-4 mb-4">
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-primary me-2"></i>
                    1 user included
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-primary me-2"></i>
                    Member support via email
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-x fs-xl text-muted me-2"></i>
                    <span class="text-muted">Live chat support</span>
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-x fs-xl text-muted me-2"></i>
                    <span class="text-muted">IT security review</span>
                  </li>
                </ul>
                <a href="#" class="btn btn-outline-primary">Get started now</a>
              </div>
            </div>
          </div>

          <!-- Company Plan (Featured) -->
          <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card border-primary bg-primary h-100" data-bs-theme="dark">
              <div class="card-body text-center text-light p-4 p-xxl-5">
                <div class="badge bg-light text-dark fs-xs py-2 px-3 mb-3">Most Popular</div>
                <h3 class="h5 text-light pb-1 mb-2">Company</h3>
                <p class="text-light opacity-70 mb-4">Best for growing teams</p>
                <div class="d-flex justify-content-center align-items-end pb-4 mb-3">
                  <div class="h2 text-light mb-0" data-monthly-price="25" data-annual-price="20">
                    $<span class="price">25</span>
                  </div>
                  <div class="fs-sm text-light opacity-70 mb-1">/month</div>
                </div>
                <ul class="list-unstyled fs-sm pb-4 mb-4">
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-light me-2"></i>
                    5 users included
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-light me-2"></i>
                    Member support via email
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-light me-2"></i>
                    Live chat support
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-x fs-xl text-light opacity-50 me-2"></i>
                    <span class="text-light opacity-70">IT security review</span>
                  </li>
                </ul>
                <a href="#" class="btn btn-light">Get started now</a>
              </div>
            </div>
          </div>

          <!-- Enterprise Plan -->
          <div class="col-lg-4">
            <div class="card h-100">
              <div class="card-body text-center p-4 p-xxl-5">
                <h3 class="h5 pb-1 mb-2">Enterprise</h3>
                <p class="text-muted mb-4">Best for large teams</p>
                <div class="d-flex justify-content-center align-items-end pb-4 mb-3">
                  <div class="h2 mb-0" data-monthly-price="50" data-annual-price="40">
                    $<span class="price">50</span>
                  </div>
                  <div class="fs-sm text-muted mb-1">/month</div>
                </div>
                <ul class="list-unstyled fs-sm pb-4 mb-4">
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-primary me-2"></i>
                    10+ users included
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-primary me-2"></i>
                    Member support via email
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-primary me-2"></i>
                    Live chat support
                  </li>
                  <li class="d-flex align-items-center pb-1 mb-2">
                    <i class="bx bx-check fs-xl text-primary me-2"></i>
                    IT security and legal review
                  </li>
                </ul>
                <a href="#" class="btn btn-outline-primary">Get started now</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Plan Comparison -->
    <section class="container py-5 my-md-3 my-lg-5">
      <div class="row align-items-center">
        <div class="col-md-4 text-center text-md-start">
          <h2 class="h1 mb-4">Plan Comparison</h2>
          <p class="fs-lg mb-md-0">Choose the option that makes the most sense for your business.</p>
        </div>
        <div class="col-md-8">
          <div class="row row-cols-1 row-cols-md-3">
            <div class="col text-md-center pb-2 mb-4">
              <h3 class="h5 mb-2 mb-md-3">Team</h3>
              <ul class="d-md-none list-unstyled">
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Users:&nbsp;</span>
                  1 included
                </li>
                <li class="d-flex align-items-center p-2 bg-secondary">
                  <span class="text-dark fw-medium">Member support via email:&nbsp;</span>
                  Standard
                </li>
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Live chat support:&nbsp;</span>
                  <i class="bx bx-x lead text-muted"></i>
                </li>
                <li class="d-flex align-items-center p-2 bg-secondary">
                  <span class="text-dark fw-medium">IT security and legal review:&nbsp;</span>
                  <i class="bx bx-x lead text-muted"></i>
                </li>
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Projects:&nbsp;</span>
                  4 projects
                </li>
              </ul>
            </div>
            <div class="col text-md-center pb-2 mb-4">
              <h3 class="h5 mb-2 mb-md-3">Company</h3>
              <ul class="d-md-none list-unstyled">
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Users:&nbsp;</span>
                  5 included
                </li>
                <li class="d-flex align-items-center p-2 bg-secondary">
                  <span class="text-dark fw-medium">Member support via email:&nbsp;</span>
                  3 hours
                </li>
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Live chat support:&nbsp;</span>
                  10+ members
                </li>
                <li class="d-flex align-items-center p-2 bg-secondary">
                  <span class="text-dark fw-medium">IT security and legal review:&nbsp;</span>
                  <i class="bx bx-check lead text-primary"></i>
                </li>
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Projects:&nbsp;</span>
                  Unlimited
                </li>
              </ul>
            </div>
            <div class="col text-md-center pb-2 mb-4">
              <h3 class="h5 mb-2 mb-md-3">Enterprise</h3>
              <ul class="d-md-none list-unstyled">
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Users:&nbsp;</span>
                  10+
                </li>
                <li class="d-flex align-items-center p-2 bg-secondary">
                  <span class="text-dark fw-medium">Member support via email:&nbsp;</span>
                  With highest priority
                </li>
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Live chat support:&nbsp;</span>
                  <i class="bx bx-check lead text-primary"></i>
                </li>
                <li class="d-flex align-items-center p-2 bg-secondary">
                  <span class="text-dark fw-medium">IT security and legal review:&nbsp;</span>
                  <i class="bx bx-check lead text-primary"></i>
                </li>
                <li class="d-flex align-items-center p-2">
                  <span class="text-dark fw-medium">Projects:&nbsp;</span>
                  Unlimited
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="container py-5 my-md-2 my-lg-4 my-xl-5">
      <div class="row">
        <div class="col-md-4 text-center text-md-start">
          <h2 class="h1 pb-2 pb-md-0 mb-4 mb-md-5">Any questions?<br>Check out the <span class="text-primary">FAQs</span></h2>
          <p class="fs-lg pb-2 pb-md-0 mb-4 mb-md-5">Still have unanswered questions and need to get in touch?</p>
          <a href="/contact" class="btn btn-primary">Contact us today</a>
        </div>
        
        <div class="col-md-8 col-xl-7 offset-xl-1">
          <div class="accordion" id="faq">
            <!-- FAQ Item 1 -->
            <div class="accordion-item border-0 rounded-3 shadow-sm mb-3">
              <h3 class="accordion-header" id="q1-heading">
                <button class="accordion-button shadow-none rounded-3" type="button" data-bs-toggle="collapse" data-bs-target="#q1" aria-expanded="true" aria-controls="q1">
                  What if I exceed my Free or paid plan limits?
                </button>
              </h3>
              <div class="accordion-collapse collapse show" id="q1" aria-labelledby="q1-heading" data-bs-parent="#faq">
                <div class="accordion-body fs-sm pt-0">
                  <p>We'll send you a notification when you're approaching your limit. You can upgrade your plan at any time to avoid service interruption.</p>
                </div>
              </div>
            </div>

            <!-- FAQ Item 2 -->
            <div class="accordion-item border-0 rounded-3 shadow-sm mb-3">
              <h3 class="accordion-header" id="q2-heading">
                <button class="accordion-button shadow-none rounded-3 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q2" aria-expanded="false" aria-controls="q2">
                  How do I know which plan is right for me?
                </button>
              </h3>
              <div class="accordion-collapse collapse" id="q2" aria-labelledby="q2-heading" data-bs-parent="#faq">
                <div class="accordion-body fs-sm pt-0">
                  <p>Start with our Team plan if you're a small team. As you grow, you can easily upgrade to Company or Enterprise plans for additional features and support.</p>
                </div>
              </div>
            </div>

            <!-- FAQ Item 3 -->
            <div class="accordion-item border-0 rounded-3 shadow-sm mb-3">
              <h3 class="accordion-header" id="q3-heading">
                <button class="accordion-button shadow-none rounded-3 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q3" aria-expanded="false" aria-controls="q3">
                  Are there any long-term commitments or cancellation fees?
                </button>
              </h3>
              <div class="accordion-collapse collapse" id="q3" aria-labelledby="q3-heading" data-bs-parent="#faq">
                <div class="accordion-body fs-sm pt-0">
                  <p>No long-term commitments required. You can cancel anytime with no cancellation fees. Your service will continue until the end of your current billing period.</p>
                </div>
              </div>
            </div>

            <!-- FAQ Item 4 -->
            <div class="accordion-item border-0 rounded-3 shadow-sm mb-3">
              <h3 class="accordion-header" id="q4-heading">
                <button class="accordion-button shadow-none rounded-3 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q4" aria-expanded="false" aria-controls="q4">
                  How do I cancel my monthly subscription?
                </button>
              </h3>
              <div class="accordion-collapse collapse" id="q4" aria-labelledby="q4-heading" data-bs-parent="#faq">
                <div class="accordion-body fs-sm pt-0">
                  <p>You can cancel your subscription anytime from your account settings or by contacting our support team. No questions asked.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Customers (Brands carousel) -->
    <section class="container py-5 mb-xl-3 mt-md-2 mt-lg-5">
      <h2 class="h1 text-center pt-2 pb-3 pb-lg-4">Over 5K Customers Worldwide Rely on Us</h2>
      <div class="swiper mx-n2" data-swiper-options='{
        "slidesPerView": 2,
        "pagination": {
          "el": ".swiper-pagination",
          "clickable": true
        },
        "breakpoints": {
          "500": {
            "slidesPerView": 3,
            "spaceBetween": 8
          },
          "650": {
            "slidesPerView": 4,
            "spaceBetween": 8
          },
          "900": {
            "slidesPerView": 5,
            "spaceBetween": 8
          },
          "1100": {
            "slidesPerView": 6,
            "spaceBetween": 8
          }
        }
      }'>
        <div class="swiper-wrapper">
          <!-- Item -->
          <div class="swiper-slide py-3">
            <a href="#" class="d-block px-2 mx-2">
              <img src="/fluxzero/portbase.svg" class="d-block d-dark-mode-none mx-auto my-2" width="155" alt="Portbase">
              <img src="/fluxzero/portbase-dark.svg" class="d-none d-dark-mode-block mx-auto my-2" width="155" alt="Portbase">
            </a>
          </div>
          
          <!-- Item -->
          <div class="swiper-slide py-3">
            <a href="#" class="d-block px-2 mx-2">
              <img src="/fluxzero/moxi.svg" class="d-block d-dark-mode-none mx-auto my-2" width="155" alt="Moxi">
              <img src="/fluxzero/moxi-dark.svg" class="d-none d-dark-mode-block mx-auto my-2" width="155" alt="Moxi">
            </a>
          </div>
          
          <!-- Item -->
          <div class="swiper-slide py-3">
            <a href="#" class="d-block px-2 mx-2">
              <img src="/fluxzero/openvoy.svg" class="d-block d-dark-mode-none mx-auto my-2" width="155" alt="OpenVoy">
              <img src="/fluxzero/openvoy-dark.svg" class="d-none d-dark-mode-block mx-auto my-2" width="155" alt="OpenVoy">
            </a>
          </div>
          
          <!-- Item -->
          <div class="swiper-slide py-3">
            <a href="#" class="d-block px-2 mx-2">
              <img src="/fluxzero/zoef.svg" class="d-block d-dark-mode-none mx-auto my-2" width="155" alt="Zoef">
              <img src="/fluxzero/zoef-dark.svg" class="d-none d-dark-mode-block mx-auto my-2" width="155" alt="Zoef">
            </a>
          </div>
          
          <!-- Item -->
          <div class="swiper-slide py-3">
            <a href="#" class="d-block px-2 mx-2">
              <img src="/fluxzero/flowmaps.svg" class="d-block d-dark-mode-none mx-auto my-2" width="155" alt="Flowmaps">
              <img src="/fluxzero/flowmaps-dark.svg" class="d-none d-dark-mode-block mx-auto my-2" width="155" alt="Flowmaps">
            </a>
          </div>
        </div>

        <!-- Pagination (bullets) -->
        <div class="swiper-pagination position-relative d-xl-none pt-2 pt-sm-3 mt-4"></div>
      </div>
    </section>

    <!-- Email Signup CTA -->
    <section class="container position-relative zindex-2">
      <div class="bg-dark border border-light rounded-3 py-5 px-4 px-sm-0" data-bs-theme="dark">
        <div class="row justify-content-center py-sm-2 py-lg-5">
          <div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 text-center">
            <h2 class="h1 text-light mb-4">Ready to Get Started?</h2>
            <p class="fs-lg text-light opacity-70 pb-4 mb-3">Start building with Fluxzero today - zero setup, zero friction.</p>

            <!-- Desktop form -->
            <form class="input-group input-group-lg d-none d-sm-flex needs-validation mb-3" novalidate>
              <input type="email" class="form-control rounded-start ps-5" placeholder="Your email" required>
              <i class="bx bx-envelope fs-lg text-muted position-absolute top-50 start-0 translate-middle-y ms-3 zindex-5"></i>
              <div class="invalid-tooltip position-absolute top-100 start-0">Please provide a valid email address.</div>
              <button type="submit" class="btn btn-primary">Get started for free</button>
            </form>

            <!-- Mobile form -->
            <form class="needs-validation d-sm-none mb-3" novalidate>
              <div class="position-relative mb-3">
                <input type="email" class="form-control form-control-lg rounded-start ps-5" placeholder="Your email" required>
                <i class="bx bx-envelope fs-lg text-muted position-absolute top-50 start-0 translate-middle-y ms-3 zindex-5"></i>
                <div class="invalid-tooltip position-absolute top-0 start-0 mt-n4">Please provide a valid email address.</div>
              </div>
              <button type="submit" class="btn btn-primary btn-lg w-100">Get started for free</button>
            </form>
            <p class="fs-sm text-light opacity-50 mb-0">No subscriptions. No annual fees. No lock-ins.</p>
          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />

  <!-- Price switch functionality -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      const priceSwitch = document.getElementById('price-switch');
      const priceElements = document.querySelectorAll('[data-monthly-price]');

      priceSwitch.addEventListener('change', function() {
        priceElements.forEach(function(element) {
          const monthlyPrice = element.dataset.monthlyPrice;
          const annualPrice = element.dataset.annualPrice;
          const priceSpan = element.querySelector('.price');
          
          if (priceSwitch.checked) {
            priceSpan.textContent = annualPrice;
          } else {
            priceSpan.textContent = monthlyPrice;
          }
        });
      });
    });
  </script>
</BaseLayout>