---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/main.scss';
---

<BaseLayout 
  title="Fluxzero | System Status" 
  description="Real-time status of Fluxzero services and infrastructure."
>
  <!-- Bootstrap icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" slot="head">
  <link rel="stylesheet" href="/fluxzero/fluxzero.css" slot="head">

  <!-- Page wrapper for sticky footer -->
  <main class="page-wrapper">
    <Header />

    <!-- Status Header -->
    <section class="bg-success" data-bs-theme="dark">
      <div class="container py-5">
        <div class="text-center">
          <div class="d-flex justify-content-center align-items-center mb-3">
            <i class="bi bi-check-circle-fill text-white fs-1 me-3"></i>
            <h1 class="display-6 text-white mb-0">All Systems Operational</h1>
          </div>
          <p class="text-white opacity-70 mb-0">All Fluxzero services are running normally</p>
        </div>
      </div>
    </section>

    <!-- Current Status -->
    <section class="container py-5">
      <div class="row">
        <div class="col-lg-8">
          <h2 class="h3 mb-4">Current Status</h2>
          
          <!-- Service Status List -->
          <div class="list-group list-group-flush">
            <!-- API Gateway -->
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
              <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3"></i>
                <div>
                  <h4 class="h6 mb-1">API Gateway</h4>
                  <p class="text-muted mb-0 fs-sm">Core API services</p>
                </div>
              </div>
              <span class="badge bg-success">Operational</span>
            </div>

            <!-- Fluxzero Runtime -->
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
              <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3"></i>
                <div>
                  <h4 class="h6 mb-1">Fluxzero Runtime</h4>
                  <p class="text-muted mb-0 fs-sm">Application execution environment</p>
                </div>
              </div>
              <span class="badge bg-success">Operational</span>
            </div>

            <!-- Message Processing -->
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
              <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3"></i>
                <div>
                  <h4 class="h6 mb-1">Message Processing</h4>
                  <p class="text-muted mb-0 fs-sm">Event and message handling</p>
                </div>
              </div>
              <span class="badge bg-success">Operational</span>
            </div>

            <!-- Data Storage -->
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
              <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3"></i>
                <div>
                  <h4 class="h6 mb-1">Data Storage</h4>
                  <p class="text-muted mb-0 fs-sm">Database and persistence layer</p>
                </div>
              </div>
              <span class="badge bg-success">Operational</span>
            </div>

            <!-- Observability -->
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
              <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3"></i>
                <div>
                  <h4 class="h6 mb-1">Observability</h4>
                  <p class="text-muted mb-0 fs-sm">Monitoring and analytics</p>
                </div>
              </div>
              <span class="badge bg-success">Operational</span>
            </div>

            <!-- Documentation -->
            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
              <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success me-3"></i>
                <div>
                  <h4 class="h6 mb-1">Documentation</h4>
                  <p class="text-muted mb-0 fs-sm">Developer docs and guides</p>
                </div>
              </div>
              <span class="badge bg-success">Operational</span>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
          <!-- Overall Uptime -->
          <div class="card border-0 bg-secondary mb-4">
            <div class="card-body text-center">
              <h3 class="h5 mb-3">Overall Uptime</h3>
              <div class="display-6 text-success mb-2">99.99%</div>
              <p class="text-muted mb-0 fs-sm">Last 30 days</p>
            </div>
          </div>

          <!-- Response Time -->
          <div class="card border-0 bg-secondary mb-4">
            <div class="card-body text-center">
              <h3 class="h5 mb-3">Avg Response Time</h3>
              <div class="display-6 text-primary mb-2">142ms</div>
              <p class="text-muted mb-0 fs-sm">Last 24 hours</p>
            </div>
          </div>

          <!-- Subscribe to Updates -->
          <div class="card border-0 bg-primary" data-bs-theme="dark">
            <div class="card-body">
              <h4 class="h5 text-white mb-3">Get Status Updates</h4>
              <p class="text-white opacity-70 mb-3 fs-sm">Subscribe to receive notifications about service status changes.</p>
              <form>
                <div class="input-group">
                  <input type="email" class="form-control" placeholder="Your email">
                  <button type="submit" class="btn btn-light">Subscribe</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Incidents -->
    <section class="container pb-5">
      <h2 class="h3 mb-4">Recent Incidents</h2>
      
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-start">
            <i class="bi bi-check-circle-fill text-success me-3 mt-1"></i>
            <div class="flex-grow-1">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h4 class="h6 mb-1">No recent incidents</h4>
                <small class="text-muted">All time high availability</small>
              </div>
              <p class="text-muted mb-0 fs-sm">
                We're proud to maintain excellent service reliability. Our team continuously monitors 
                all systems to ensure optimal performance.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Support -->
    <section class="bg-light py-5">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-8">
            <h3 class="h4 mb-2">Having issues not reflected here?</h3>
            <p class="text-muted mb-0">Contact our support team for assistance with your specific use case.</p>
          </div>
          <div class="col-md-4 text-md-end">
            <a href="/contact" class="btn btn-primary btn-lg mt-3 mt-md-0">Contact Support</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <!-- Auto-refresh status every 60 seconds -->
  <script is:inline>
    // Auto-refresh the page every 60 seconds to get latest status
    setTimeout(function() {
      window.location.reload();
    }, 60000);
  </script>
</BaseLayout>