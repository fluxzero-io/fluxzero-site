---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sdk from './Sdk.astro';
import '../styles/main.scss';
import '../styles/fluxzero.css';
import Runtime from './Runtime.astro';
import Cloud from './Cloud.astro';
import BringYourOwn from './BringYourOwn.astro';
import ContactForm from './ContactForm.astro';
---

<BaseLayout
        title="Cloud Beta | Fluxzero"
        description="Fluxzero is the fastest way to build scalable, message-driven apps. One unified SDK, zero boilerplate, full observability, and deploy anywhere."
>
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" slot="head">

    <!-- Page wrapper for sticky footer -->
    <main class="page-wrapper">
        <div class="bg-dark" style="height: 75px">
            <Header/>
        </div>

        <section class="position-relative bg-secondary pt-5">
            <div class="container position-relative zindex-2 pt-5">

                <div class="row">

                    <div class="col-xl-4 col-lg-5 pb-4 pb-sm-5 mb-2 mb-sm-0">
                        <div class="pe-lg-4 pe-xl-0">
                            <h1 class="pb-3 pb-md-4 mb-lg-5">Fluxzero Cloud is in closed beta — request early access</h1>
                            <div class="d-flex align-items-start pb-3 mb-sm-1 mb-md-3">
                                <div class="bg-light text-primary rounded-circle flex-shrink-0 fs-3 lh-1 p-3">
                                    <i class="bx bx-envelope"></i>
                                </div>
                                <div class="ps-3 ps-sm-4">
                                    <h2 class="h4 pb-1 mb-2">Ask to join</h2>
                                    <p class="mb-2">We’re inviting a limited number of early testers. Use the form to request access.</p>
                                    <a href="mailto:info&#64;fluxzero.io" class="btn btn-link btn-lg px-0">
                                        Prefer email? Reach us directly.
                                        <i class="bx bx-right-arrow-alt lead ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact form -->
                    <ContactForm/>
                </div>
            </div>
            <div class="position-absolute bottom-0 start-0 w-100 bg-light" style="height: 8rem;"></div>
        </section>

    </main>
    <Footer/>

</BaseLayout>