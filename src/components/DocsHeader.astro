<script>
  // Simple theme toggle - no MutationObserver to avoid infinite loops
  function updateThemeIcons(theme) {
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    
    if (theme === 'dark') {
      if (sunIcon) sunIcon.style.display = 'block';
      if (moonIcon) moonIcon.style.display = 'none';
    } else {
      if (sunIcon) sunIcon.style.display = 'none';
      if (moonIcon) moonIcon.style.display = 'block';
    }
  }
  
  // Initialize theme icons on page load without overriding existing theme
  function initTheme() {
    const html = document.documentElement;
    const existing = html.dataset.theme;
    const currentTheme = existing ||
      localStorage.getItem('starlight-theme') ||
      (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');

    html.dataset.theme = currentTheme;
    if (currentTheme === 'dark') {
      html.classList.add('dark');
    } else {
      html.classList.remove('dark');
    }

    updateThemeIcons(currentTheme);
  }
  
  // Simple theme toggle
  document.addEventListener('DOMContentLoaded', () => {
    initTheme();
    const html = document.documentElement;
    let applying = false;
    const syncDarkClass = () => {
      if (applying) return;
      const theme = (html.dataset.theme || localStorage.getItem('starlight-theme') || 'light');
      applying = true;
      if (theme === 'dark') {
        html.classList.add('dark');
      } else {
        html.classList.remove('dark');
      }
      applying = false;
      updateThemeIcons(theme);
    };

    // Observe theme changes on html only
    const observer = new MutationObserver(syncDarkClass);
    observer.observe(html, { attributes: true, attributeFilter: ['data-theme'] });
    
    const themeToggle = document.getElementById('theme-toggle');
    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const currentTheme = html.dataset.theme || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        // Update Starlight theme
        html.dataset.theme = newTheme;
        localStorage.setItem('starlight-theme', newTheme);
        
        // Update header theme by adding/removing dark class
        syncDarkClass();
      });
    }

    // Mobile menu toggle
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenuClose = document.getElementById('mobile-menu-close');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');

    function openMobileMenu() {
      if (mobileMenu) mobileMenu.style.transform = 'translateX(0)';
      if (mobileMenuOverlay) {
        mobileMenuOverlay.style.opacity = '1';
        mobileMenuOverlay.style.visibility = 'visible';
      }
      document.body.style.overflow = 'hidden';
    }

    function closeMobileMenu() {
      if (mobileMenu) mobileMenu.style.transform = 'translateX(100%)';
      if (mobileMenuOverlay) {
        mobileMenuOverlay.style.opacity = '0';
        mobileMenuOverlay.style.visibility = 'hidden';
      }
      document.body.style.overflow = '';
    }

    if (mobileMenuToggle) mobileMenuToggle.addEventListener('click', openMobileMenu);
    if (mobileMenuClose) mobileMenuClose.addEventListener('click', closeMobileMenu);
    if (mobileMenuOverlay) mobileMenuOverlay.addEventListener('click', closeMobileMenu);

    // Close mobile menu on resize
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 1024) {
        closeMobileMenu();
      }
    });
  });
</script>

